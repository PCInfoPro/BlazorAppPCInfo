@page "/"
@inject IStringLocalizer<Resources> Localizer
@inject SharedLocalizer Localizer2

<PageTitle>Home</PageTitle>

<h1>@Localizer.GetString("HelloWorld")</h1>
<h1>@Localizer2["HelloWorld"]</h1>

@Localizer.GetString("WelcomeMessage")
@Localizer2["WelcomeMessage"]

<div class="card mb-4">
    <div class="card-body">
        <p class="card-text">
            <code>
                @("Modal.Show<Confirm>(\"Welcome to Blazored Modal\", options);")
            </code>
        </p>
    </div>
</div>

<button @onclick="ShowModal" class="btn btn-primary">Show Modal</button>

@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;

    void ShowModal() 
        => Modal.Show<Confirm>("Welcome to Blazored Modal");
}
