@using UtilInfoPC.Models;
@inject HttpClient Http

<EditForm Model="@newHardDrive" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="BrandName" class="form-label">Modelo del disco</label>
        <InputText id="BrandName" class="form-control" @bind-Value="newHardDrive.Model" />
    </div>

    <button type="submit" class="btn btn-primary">Agregar disco</button>
</EditForm>

@code {
    private HardDrive newHardDrive = new HardDrive();

    [Parameter]
    public EventCallback OnHardDriveAdded { get; set; }

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("https://localhost:5000/api/Storages", newHardDrive);

        if (response.IsSuccessStatusCode)
        {
            await OnHardDriveAdded.InvokeAsync();
        }
        else
        {
            Console.WriteLine("Error al a√±adir la marca.");
        }
    }
}
