    private async Task HandleValidSubmit()
    {
        // Almacenar el valor correcto según la elección del almacenamiento
        if (newComputer.UseCustomStorage && newComputer.CustomStorageGB.HasValue)
        {
            newComputer.Storage = newComputer.CustomStorageGB.Value;
        }
        else if (!newComputer.UseCustomStorage && newComputer.SelectedStorageId.HasValue)
        {
            var selectedDrive = hardDrives.FirstOrDefault(d => d.Id == newComputer.SelectedStorageId.Value);
            if (selectedDrive != null)
            {
                newComputer.Storage = selectedDrive.CapacityGB;
            }
        }

        var request = new HttpRequestMessage(HttpMethod.Post, "https://localhost:5175/api/computers");   
        request.Content = new StringContent(JsonSerializer.Serialize(newComputer), System.Text.Encoding.UTF8, "application/json");

        // Agregar el token JWT al encabezado de la solicitud
        Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token2.Token);
        var response = await Http.SendAsync(request);

        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/computers");
        }
        else
        {
            Console.WriteLine("Error al añadir el ordenador.");
        }
    }

    private async Task OpenAddBrandModal()
    {
        var result = await ModalService.Show<AddBrandForm>("Añadir Marca").Result;

        if (!result.Cancelled)
        {
            var newBrand = result.Data as Brand;
            brands.Add(newBrand);
        }
    }
    
    // Métodos para mostrar modales
    private void ShowAddBrandModal() => showAddBrandModal = true;
    private void ShowAddProcessorModal() => showAddProcessorModal = true;
    private void ShowAddRAMModal() => showAddRAMModal = true;
    private void ShowAddHardDriveModal() => showAddHardDriveModal = true;

    // Métodos para cerrar modales y refrescar las listas
    private void CloseAddBrandModal() => showAddBrandModal = false;
    private void CloseAddProcessorModal() => showAddProcessorModal = false;
    private void CloseAddRAMModal() => showAddRAMModal = false;
    private void CloseAddHardDriveModal() => showAddHardDriveModal = false;

    private async Task RefreshBrands() => brands = await Http.GetFromJsonAsync<List<Brand>>("https://localhost:5000/api/brands");
    private async Task RefreshProcessors() => processors = await Http.GetFromJsonAsync<List<Processor>>("https://localhost:5000/api/processors");
    private async Task RefreshRAMs() => rams = await Http.GetFromJsonAsync<List<RAM>>("https://localhost:5000/api/rams");
    private async Task RefreshHardDrives() => hardDrives = await Http.GetFromJsonAsync<List<HardDrive>>("https://localhost:5000/api/storages");

